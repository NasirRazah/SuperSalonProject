<Window x:Class="OfflineRetailV2.frmRegistrationDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OfflineRetailV2"
        xmlns:cc="clr-namespace:OfflineRetailV2.Controls"
        xmlns:lm="clr-namespace:OfflineRetailV2.LayoutManager"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
       xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen"
        Title="" Foreground="White" Width="700" Height="670" SizeToContent="WidthAndHeight"  >
    <cc:ModalWindow  x:Name="ModalWindow">
        <Grid Margin="9">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="9"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Registration"  x:Name="Title" VerticalAlignment="Center" Style="{DynamicResource BlueHeading}" />
                <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="9"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="9"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="9"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="9"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="4" Content="DEMO REGISTRATION" Height="35" Width="170" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource PurpleButtonStyle}" x:Name="btnDemo" Click="btnDemo_Click" />
                    <Button Grid.Column="6" Content="CANCEL" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource CancelButtonStyle}" x:Name="btnCancel" Click="btnCancel_Click" />
                    <Button Grid.Column="8" Content="REGISTER" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource SaveButtonStyle}" x:Name="btnOK" Click="btnOK_Click"/>
                </Grid>
            </Grid>
            <Rectangle Grid.Row="1" Style="{DynamicResource DefaultLineStyle}"  VerticalAlignment="Center"  Margin="-9,0"/>
            <Grid Grid.Row="2" Margin="5">

                <Grid>

                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="Serial No." Visibility="Collapsed"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" FontFamily="{StaticResource OSSemiBold}"
                                   Text="2569-8745-1937-6023" x:Name="lbl_Key" Visibility="Collapsed"/>

                    <TextBlock Grid.Row="0" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="Company Name"/>
                    <TextBox Grid.Row="2" x:Name="txtCompany"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="Address 1"/>
                    <TextBox Grid.Row="6" Grid.Column="2" x:Name="txtAdd1"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="Address 2"/>
                    <TextBox Grid.Row="10"  x:Name="txtAdd2"/>

                    <TextBlock Grid.Row="12" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="City"/>
                    <TextBox Grid.Row="14" Grid.Column="2" x:Name="txtCity"/>

                    <TextBlock Grid.Row="16" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="Zip"/>
                    <TextBox Grid.Row="18" Grid.Column="2" x:Name="txtZip"/>

                    <TextBlock Grid.Row="20" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="State"/>
                    <TextBox Grid.Row="22" Grid.Column="2"  x:Name="txtState"/>

                    <TextBlock Grid.Row="24" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="EMail"/>
                    <TextBox Grid.Row="26" Grid.Column="2" x:Name="txtEMail"/>

                    <TextBlock Grid.Row="28" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}" Text="No of Users"/>
                    <Grid Grid.Row="30" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="21"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <dxe:SpinEdit Grid.Column="0"  x:Name="txtUsers" HorizontalContentAlignment="Center" >
                            <dxe:SpinEdit.Buttons>
                                <dxe:ButtonInfoCollection>
                                    <dxe:ButtonInfo Command="{Binding SpinDownCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxe:SpinEdit}}">
                                        <dxe:ButtonInfo.Content>
                                            <dx:DXImage Source="{DynamicResource GreenDropdownD}" Height="15" Width="16"  Margin="5,5">
                                            </dx:DXImage>
                                        </dxe:ButtonInfo.Content>
                                    </dxe:ButtonInfo>
                                    <dxe:ButtonInfo Command="{Binding SpinUpCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxe:SpinEdit}}" IsLeft="True">
                                        <dxe:ButtonInfo.Content>
                                            <dx:DXImage Source="{DynamicResource GreenDropdownU}" Height="15" Width="16"  Margin="5,5">
                                            </dx:DXImage>
                                        </dxe:ButtonInfo.Content>
                                    </dxe:ButtonInfo>
                                </dxe:ButtonInfoCollection>
                            </dxe:SpinEdit.Buttons>
                        </dxe:SpinEdit>
                        <dxe:ToggleSwitch Grid.Column="2" CheckedStateContent="Unlimited" UncheckedStateContent="Unlimited" ContentPlacement="Far" HorizontalAlignment="Left"
                                      x:Name="chkUsers" IsChecked="True" Checked="chkUsers_Checked" Unchecked="chkUsers_Unchecked"/>
                    </Grid>

                    <TextBlock Grid.Row="32" Grid.Column="0" FontFamily="{StaticResource OSSemiBold}"
                                   Text="Activation Key"/>
                    <TextBox Grid.Row="34" Grid.Column="2" x:Name="txtActivationKey"/>

                    <Grid Grid.Row="36" Margin="0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="15"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="PRINT" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource GeneralButtonStyle}" x:Name="btnPrint" Click="btnPrint_Click" />
                        <Button Grid.Column="2" Content="EMAIL" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource GeneralButtonStyle}" x:Name="btnEMail" Click="btnMail_Click" />
                    </Grid>

                    <Grid Grid.Row="18" Grid.Column="2" HorizontalAlignment="Left" Width="150" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="9"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="9"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <CheckBox Grid.Row="0" Content="POS" FlowDirection="RightToLeft"  Foreground="White" IsChecked="True"
                                      x:Name="chkPOS"/>
                        <CheckBox Grid.Row="2" Content="SCALE" FlowDirection="RightToLeft" Foreground="White"
                                      x:Name="chkScale"/>
                        <CheckBox Grid.Row="4" Content="ORDERING" FlowDirection="RightToLeft" Foreground="White"
                                      x:Name="chkOrdering"/>
                        <CheckBox Grid.Row="6" Content="Label Designer" Foreground="White" HorizontalAlignment="Left"
                                      x:Name="chkLabelDesigner"/>
                    </Grid>

                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="9"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="9"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="9"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Content="Serial No." Height="38" Width="130" FontFamily="{StaticResource OSSemiBold}" FontSize="13"
                        Style="{DynamicResource GeneralButtonStyle}" x:Name="btnSerialNo" Click="btnSerialNo_Click" Visibility="Hidden"/>






                    <Button Grid.Row="10" Content="Setup Help" Height="38" Width="130" FontFamily="{StaticResource OSSemiBold}" FontSize="13" x:Name="btnSetupHelp" Click="btnSetupHelp_Click"
                        Style="{DynamicResource GeneralButtonStyle}" Visibility="Hidden"/>


                </Grid>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="9"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="9"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            </Grid>
            <Grid Background="#3D000000" Grid.RowSpan="5" x:Name="blurGrid" Visibility="Collapsed"/>
        </Grid>
    </cc:ModalWindow>
</Window>
