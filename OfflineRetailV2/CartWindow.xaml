<dx:ThemedWindow x:Class="OfflineRetailV2.UserControls.CartWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                 Title="Cart" Height="600" Width="300">
    <Grid>
        <dxg:GridControl x:Name="CartGrid">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Description" Header="Description" />
                <dxg:GridColumn FieldName="Quantity" Header="Quantity" />
                <dxg:GridColumn FieldName="Price" Header="Price" />
                <dxg:GridColumn FieldName="TotalAmount" Header="Total Amount" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True" />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</dx:ThemedWindow>