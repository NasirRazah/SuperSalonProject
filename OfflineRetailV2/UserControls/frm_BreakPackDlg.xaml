<Window x:Class="OfflineRetailV2.UserControls.frm_BreakPackDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfflineRetailV2.UserControls"
                xmlns:cc="clr-namespace:OfflineRetailV2.Controls"
        xmlns:lm="clr-namespace:OfflineRetailV2.LayoutManager"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen"
        Title="" Foreground="White"   
        Width="1024" Height="740" Loaded="Window_Loaded" Closing="Window_Closing">
    <cc:ModalWindow  x:Name="ModalWindow">
        <Grid Margin="9">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Title"  x:Name="Title" VerticalAlignment="Center" Style="{DynamicResource BlueHeading}" />
                <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="9"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="CANCEL" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource CancelButtonStyle}" x:Name="btnCancel" Click="BtnCancel_Click" />
                    <Button Grid.Column="2" Content="SAVE" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource SaveButtonStyle}" x:Name="btnOK" Click="BtnOK_Click"/>
                </Grid>
            </Grid>
            <Rectangle Grid.Row="1" Style="{DynamicResource DefaultLineStyle}"  VerticalAlignment="Center"  Margin="-9,0"/>

            <Grid Grid.Row="2" Margin="0,9,0,0">
                <UniformGrid Columns="4" >
                    <FrameworkElement x:Name="c1"/>
                </UniformGrid>
                <TabControl Style="{DynamicResource OuterPOSTabControlStyle}" x:Name="tcProduct" PreviewMouseLeftButtonUp="TcProduct_PreviewMouseLeftButtonUp">
                    <TabItem  Width="{Binding ElementName=c1, Path=ActualWidth}" x:Name="tpGeneral"
                         Style="{DynamicResource OuterPOSTabItemStyle}" PreviewMouseLeftButtonUp="TpGeneral_PreviewMouseLeftButtonUp">
                        <TabItem.Header>
                            <TextBlock Text="General Details" Style="{DynamicResource TabItemText}"></TextBlock>
                        </TabItem.Header>

                        <Grid Margin="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="2"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="2"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="7,0,7,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="30"></ColumnDefinition>
                                </Grid.ColumnDefinitions>


                                <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource GreenBorder}">
                                    <TextBlock Style="{DynamicResource GreenBorderInfo}" Text="Break Pack Description"></TextBlock>
                                </Border>

                                <TextBlock Grid.Row="2" Text="UPC" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="4"  Height="30" x:Name="txtSKU" MaxLength="16" EditValueChanged="TxtSKU_EditValueChanged" TabIndex="0" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus" />

                                <TextBlock Grid.Row="6" Text="Description" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="8"  Height="30" x:Name="txtDesc" MaxLength="150" EditValueChanged="TxtSKU_EditValueChanged" TabIndex="1" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>

                                <dxe:HyperlinkEdit Grid.Row="10" Text="Link SKU" AllowAutoNavigate="True" FontSize="11" FontFamily="{StaticResource OSSemiBold}" x:Name="lbLinkSKU" RequestNavigation="LbLinkSKU_RequestNavigation"/>

                                <dxg:LookUpEdit Height="30" Grid.Row="12"  TabIndex="2"
                                          x:Name="cmbLinkSKU" ItemsSource="{Binding}"
                                        DisplayMember="SKU"
                                        ValueMember="ID"
                                        AutoPopulateColumns="False"
                                        AutoComplete="True"
                                        IncrementalFiltering="True"
                                        ImmediatePopup="True"
                                        IsPopupAutoWidth="False" LostFocus="CmbLinkSKU_LostFocus"  PreviewMouseLeftButtonDown="CmbLinkSKU_PreviewMouseLeftButtonDown" EditValueChanged="CmbLinkSKU_EditValueChanged"
                                        PopupOpened="gen_PopupOpened">
                                    <dxg:LookUpEdit.PopupContentTemplate>
                                        <ControlTemplate>
                                            <dxg:GridControl Name="PART_GridControl" AutoGenerateColumns="None">
                                                <dxg:GridControl.Columns>
                                                    <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                                        <dxg:GridColumn.EditSettings>
                                                            <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                                        </dxg:GridColumn.EditSettings>
                                                    </dxg:GridColumn>
                                                    <dxg:GridColumn FieldName="ID" Visible="False" />
                                                    <dxg:GridColumn FieldName="SKU" Header="SKU" VisibleIndex="1" />
                                                    <dxg:GridColumn FieldName="Description" Header="Description" VisibleIndex="2" />
                                                </dxg:GridControl.Columns>
                                                <dxg:GridControl.View>
                                                    <dxg:TableView AutoWidth="True" />
                                                </dxg:GridControl.View>
                                            </dxg:GridControl>
                                        </ControlTemplate>
                                    </dxg:LookUpEdit.PopupContentTemplate>
                                </dxg:LookUpEdit>




                                <TextBlock Grid.Row="14" Text="Ratio" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="16"  TabIndex="3" Height="30" x:Name="numRatio" MaxLength="6" Text="1" Mask="N2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  EditValueChanged="NumRatio_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>


                                <Border Grid.Row="18" Grid.ColumnSpan="3" Style="{DynamicResource PurpleBorder}">
                                    <TextBlock Style="{DynamicResource PurpleBorderInfo}" Text="Photo"></TextBlock>
                                </Border>

                                <Grid Grid.Row="20" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Height="128" Width="140" Style="{DynamicResource GroupBorder}" BorderThickness="1" >
                                        <Image x:Name="pictPhoto" Stretch="Uniform"/>
                                    </Border>
                                    <Grid Grid.Column="2" Width="120" HorizontalAlignment="Right">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="9"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="9"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Button Grid.Row="0" Width="120" 
                                            Style="{DynamicResource DeletePhotoButton}" x:Name="btnClearImage" Click="BtnClearImage_Click" >

                                        </Button>
                                        <Button Grid.Row="2" Width="120"  
                                Style="{DynamicResource ScanPhotoButton}" x:Name="btnScanImage">

                                        </Button>
                                        <Button Grid.Row="4" Width="120" MinHeight="30" 
                                Style="{DynamicResource SelectPhotoButton}" x:Name="button1" Click="Button1_Click" >

                                        </Button>
                                    </Grid>
                                </Grid>



                            </Grid>
                            <Grid Grid.Column="1" Style="{DynamicResource ScreenSeparator}"></Grid>
                            <Grid Grid.Column="2" Margin="7,0,7,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
