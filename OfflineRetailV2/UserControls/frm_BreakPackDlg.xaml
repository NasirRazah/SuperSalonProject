                                    </Grid.ColumnDefinitions>


                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Preferred Type" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                    <dxe:ComboBoxEdit Grid.Row="2" Grid.Column="0" Height="30" TabIndex="18" x:Name="cmbLabelType" IsTextEditable="False" EditValueChanged="TxtSKU_EditValueChanged" PreviewMouseLeftButtonDown="CmbLabelType_PreviewMouseLeftButtonDown" >
                                        <dxe:ComboBoxEditItem>1 Up</dxe:ComboBoxEditItem>
                                        <dxe:ComboBoxEditItem>2 Up</dxe:ComboBoxEditItem>
                                        <dxe:ComboBoxEditItem>Butterfly</dxe:ComboBoxEditItem>
                                        <dxe:ComboBoxEditItem>Avery 5160/NEBS 12650</dxe:ComboBoxEditItem>
                                    </dxe:ComboBoxEdit>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Bin Location" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                    <dxe:TextEdit Grid.Row="2" Grid.Column="2" Height="30" TabIndex="19" x:Name="txtBinLocation" MaxLength="10" EditValueChanged="TxtSKU_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus" />
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Season" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
