                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource OrangeBorder}">
                                    <TextBlock Style="{DynamicResource OrangeBorderInfo}" Text="Finances"></TextBlock>
                                </Border>

                                <TextBlock Grid.Row="2" Text="Original Cost" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="4" TabIndex="4" Height="30" x:Name="numCcost" Mask="f2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  Text="0.00" EditValueChanged="TxtSKU_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus" />

                                <TextBlock Grid.Row="6" Text="Discounted Cost" FontSize="12" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="8"   HorizontalAlignment="Stretch" x:Name="numDcost" Mask="f2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  Text="0.00"  GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>

                                <TextBlock Grid.Row="10" Text="Last Purchase" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="12"  Height="30" TabIndex="5" x:Name="numLPcost" Mask="f2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  Text="0.00" EditValueChanged="TxtSKU_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>

                                <TextBlock Grid.Row="14"  Text="Price A" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="16"  Height="30" TabIndex="6" x:Name="numPriceA" Mask="f2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  Text="0.00" EditValueChanged="TxtSKU_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>
                                <TextBlock Grid.Row="16" Grid.Column="2" Text="N/A" FontSize="11" FontFamily="{StaticResource OSSemiBold}" x:Name="lbPriceMarginA"/>

                                <TextBlock Grid.Row="18"  Text="Price B" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="20" Height="30" TabIndex="7" x:Name="numPriceB" Mask="f2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  Text="0.00" EditValueChanged="TxtSKU_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>
                                <TextBlock Grid.Row="20" Grid.Column="2" Text="N/A" FontSize="11" FontFamily="{StaticResource OSSemiBold}" x:Name="lbPriceMarginB"/>

                                <TextBlock Grid.Row="22"  Text="Price C" FontSize="11" FontFamily="{StaticResource OSSemiBold}"/>
                                <dxe:TextEdit Grid.Row="24"  Height="30" TabIndex="8" x:Name="numPriceC" Mask="f2" MaskType="Numeric" MaskUseAsDisplayFormat="True" Text="0.00" EditValueChanged="TxtSKU_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>
                                <TextBlock Grid.Row="24" Grid.Column="2" Text="N/A" FontSize="11" FontFamily="{StaticResource OSSemiBold}" x:Name="lbPriceMarginC"/>


                                <Border Grid.Row="26" Grid.ColumnSpan="3" Style="{DynamicResource BlueBorder}">
                                    <TextBlock Style="{DynamicResource BlueBorderInfo}" Text="Tax"></TextBlock>
                                </Border>

                                <dxg:GridControl Grid.Row="28" Grid.ColumnSpan="3" ShowBorder="True" x:Name="grdTax" Height="150"  AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="False" PreviewMouseLeftButtonDown="GrdTax_PreviewMouseLeftButtonDown" >
                                    <dxg:GridControl.View>
                                        <dxg:TableView NavigationStyle="Cell" AllowPerPixelScrolling="True" ShowTotalSummary="False" x:Name="gridView3" ShowFilterPanelMode="Never" AllowColumnFiltering="False" CellValueChanging="GridView3_CellValueChanging" />
                                    </dxg:GridControl.View>
                                    <dxg:GridColumn FieldName="ID" Header="ID" Width="*" x:Name="colMappingID" Visible="False"/>
                                    <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                        <dxg:GridColumn.EditSettings>
                                            <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                        </dxg:GridColumn.EditSettings>
                                    </dxg:GridColumn>
                                    <dxg:GridColumn IsSmart="False" FieldName="TaxID" Header="Tax ID" Width="100" x:Name="colTaxID" AllowFocus="True" AllowEditing="True">
                                        <dxg:GridColumn.EditSettings>
                                            <dxg:LookUpEditSettings   x:Name="PART_Editor_Tax" ValueMember="TaxID" DisplayMember="TaxID" ImmediatePopup="True" AutoComplete="False" IsPopupAutoWidth="True" PreviewMouseLeftButtonDown="PART_Editor_Tax_PreviewMouseLeftButtonDown" >
                                                <dxg:LookUpEditSettings.PopupContentTemplate>
                                                    <ControlTemplate>
                                                        <dxg:GridControl Style="{DynamicResource partGrd}" x:Name="PART_GridControl" EnableSmartColumnsGeneration="False" ShowBorder="False" BorderBrush="Black" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" >
                                                            <dxg:GridControl.View>
                                                                <dxg:TableView x:Name="gridView2" AutoWidth="True" NavigationStyle="Row" Background="AliceBlue" ShowTotalSummary="false" AllowEditing="False" ShowIndicator="False" ShowFilterPanelMode="Never" ShowGroupPanel="False" FadeSelectionOnLostFocus="False" ShowVerticalLines="False"  AllowColumnFiltering="False"  >
                                                                </dxg:TableView>
                                                            </dxg:GridControl.View>
                                                            <dxg:GridControl.Columns>
                                                                <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                                                    <dxg:GridColumn.EditSettings>
                                                                        <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                                                    </dxg:GridColumn.EditSettings>
                                                                </dxg:GridColumn>
                                                                <dxg:GridColumn IsSmart="False" FieldName="ID" Header="ID" Visible="False" VisibleIndex="-1"   />
                                                                <dxg:GridColumn IsSmart="False" FieldName="TaxID" Header="Tax ID" Visible="False" VisibleIndex="-1"   />
                                                                <dxg:GridColumn IsSmart="False" FieldName="TaxName" Header="Tax" Visible="True" VisibleIndex="1"/>
                                                            </dxg:GridControl.Columns>
                                                        </dxg:GridControl>
                                                    </ControlTemplate>
                                                </dxg:LookUpEditSettings.PopupContentTemplate>
                                            </dxg:LookUpEditSettings>

                                        </dxg:GridColumn.EditSettings>
                                    </dxg:GridColumn>
                                    <dxg:GridColumn FieldName="TaxName"  Width="*" x:Name="colTaxName" AllowEditing="False" AllowFocus="False" AllowSorting="False" HorizontalHeaderContentAlignment="Stretch">
                                        <dxg:GridColumn.Header>
                                            <Grid Margin="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="40"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="25"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Column="0" Text="Name" Foreground="White" FontFamily="{DynamicResource OSSemiBold}" />
                                                <Button Grid.Column="1" Style="{DynamicResource DeleteGridRowButton}" Margin="0,-9" Background="Transparent" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderBrush="Transparent" BorderThickness="0"  x:Name="btnDelTax" HorizontalAlignment="Right" Click="BtnDelTax_Click" Width="30" >

                                                </Button>

                                            </Grid>
                                        </dxg:GridColumn.Header>
                                    </dxg:GridColumn>
                                </dxg:GridControl>

                            </Grid>
                            <Grid Grid.Column="3" Style="{DynamicResource ScreenSeparator}"></Grid>
                            <Grid Grid.Column="4" Margin="7,0,7,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                </Grid.RowDefinitions>




                                <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource PurpleBorder}">
                                    <TextBlock Style="{DynamicResource PurpleBorderInfo}" Text="Options"></TextBlock>
                                </Border>

                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" x:Name="chkActive" TabIndex="9"
                                          UncheckedStateContent="Is Active?" CheckedStateContent="Is Active?"  IsChecked="True" Checked="ChkActive_Checked" Unchecked="ChkActive_Checked" />
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="0" x:Name="chkPOSScreen" TabIndex="10"
                                          UncheckedStateContent="Add to POS Main Screen" CheckedStateContent="Add to POS Main Screen"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="0" x:Name="chkPOSCatScreen" TabIndex="10"
                                          UncheckedStateContent="Add to POS Category Screen" CheckedStateContent="Add to POS Category Screen"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="0" x:Name="chkPrintLabel" TabIndex="11"
                                          UncheckedStateContent="Print Label" CheckedStateContent="Print Label"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="10" Grid.Column="0" x:Name="chkNoPrice" TabIndex="12"
                                          UncheckedStateContent="No Price on Label" CheckedStateContent="No Price on Label"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" TabIndex="13" HorizontalContentAlignment="Left"
                                          UncheckedStateContent="Prompt for Tag,SL No. &amp; Purchase Date" CheckedStateContent="Prompt for Tag,SL No. &amp; Purchase Date"  x:Name="chkRepairPromptTag" Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>

                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left"  Grid.Row="14" Grid.Column="2" x:Name="chkZeroStock" TabIndex="14"
                                          UncheckedStateContent="Sell beyond Zero Stock" CheckedStateContent="Sell beyond Zero Stock"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="16" Grid.Column="2" x:Name="chkPromptPrice" TabIndex="15"
                                          UncheckedStateContent="Prompt for Price" CheckedStateContent="Prompt for Price"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="18" Grid.Column="2" x:Name="chkFoodStamp" TabIndex="16"
                                          UncheckedStateContent="Food Stamp Eligible"  CheckedStateContent="Food Stamp Eligible"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>
                                <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" Grid.Row="20" Grid.Column="2" x:Name="chkBarCode" TabIndex="17"
                                          UncheckedStateContent="Scale Barcode" CheckedStateContent="Scale Barcode"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"/>

                                <Border Grid.Row="22" Grid.ColumnSpan="3" Style="{DynamicResource GreenBorder}">
                                    <TextBlock Style="{DynamicResource GreenBorderInfo}" Text="Miscellaneous"></TextBlock>
                                </Border>

                                <Grid Grid.Row="24">

                                    <Grid.RowDefinitions>
