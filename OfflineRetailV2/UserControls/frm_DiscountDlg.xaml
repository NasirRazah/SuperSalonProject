<Window x:Class="OfflineRetailV2.UserControls.frm_DiscountDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfflineRetailV2.UserControls"
              xmlns:cc="clr-namespace:OfflineRetailV2.Controls"
        xmlns:lm="clr-namespace:OfflineRetailV2.LayoutManager"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen"
        Title="" Foreground="White"   
        Width="1024" Height="740" Loaded="Window_Loaded" Closing="Window_Closing">
    <cc:ModalWindow  x:Name="ModalWindow">



        <Grid Margin="9">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="9"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Title"  x:Name="Title" VerticalAlignment="Center" Style="{DynamicResource BlueHeading}" />
                <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="9"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="CANCEL" Height="40" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource CancelButtonStyle}" x:Name="btnCancel" Click="BtnCancel_Click" />
                    <Button Grid.Column="2" Content="SAVE" Height="40" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource SaveButtonStyle}" x:Name="btnOK" Click="BtnOK_Click" Margin="0.2,0,-0.2,0" VerticalAlignment="Top"/>
                </Grid>
            </Grid>
            <Rectangle Grid.Row="1" Style="{DynamicResource DefaultLineStyle}"  VerticalAlignment="Center"  Margin="-9,0"/>

            <Grid Margin="9" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="2"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="2"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="7,0,7,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="9"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                    </Grid.RowDefinitions>


                    <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource GreenBorder}">
                        <TextBlock Style="{DynamicResource GreenBorderInfo}" Text="General Details"></TextBlock>
                    </Border>

                    <TextBlock Grid.Row="2" Text="Discount Name"/>
                    <dxe:TextEdit Grid.Row="4" Grid.Column="2" Width="300" x:Name="txtName" MaxLength="15" EditValueChanged="TxtName_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                    <TextBlock Grid.Row="6" Text="Description" VerticalAlignment="Top"/>
                    <dxe:TextEdit Grid.Row="8" Grid.Column="2" Height="100" x:Name="txtDesc"
                                      VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"
                                      VerticalContentAlignment="Top" AcceptsReturn="True" TextWrapping="Wrap" EditValueChanged="TxtName_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>

                    <dxe:ToggleSwitch Grid.Row="10"  x:Name="chkActive" ContentPlacement="Far" CheckedStateContent="Active ?" UncheckedStateContent="Active ?" HorizontalAlignment="Left" Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>
                    <dxe:ToggleSwitch Grid.Row="12"  x:Name="chkAuto" ContentPlacement="Far" CheckedStateContent="Discount will be applied automatically" UncheckedStateContent="Discount will be applied automatically" HorizontalAlignment="Left" Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>

                    <dxe:ToggleSwitch Grid.Row="14" Grid.Column="0" ContentPlacement="Far" CheckedStateContent="Apply on Customer only" UncheckedStateContent="Apply on Customer only" HorizontalAlignment="Left"   IsChecked="False"
                                  x:Name="chkCustomer" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"/>
                    
                    <dxe:ToggleSwitch Grid.Row="16"   ContentPlacement="Far" CheckedStateContent="Limited Period Discount Offer ?" UncheckedStateContent="Limited Period Discount Offer ?" HorizontalAlignment="Left" x:Name="chkLimitedPeriod" Checked="ChkLimitedPeriod_Checked" Unchecked="ChkLimitedPeriod_Checked"></dxe:ToggleSwitch>

                    <Grid Grid.Row="18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="15"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="From" x:Name="lbs"/>
                        <TextBlock Grid.Column="2" Text="To" x:Name="lbf"/>
                    </Grid>

                    <Grid Grid.Row="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="15"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <dxe:DateEdit Grid.Column="0" x:Name="dtStart" EditValueChanged="TxtName_EditValueChanged" PreviewMouseLeftButtonDown="DtStart_PreviewMouseLeftButtonDown"/>
                        <dxe:DateEdit Grid.Column="2" x:Name="dtFinish" EditValueChanged="TxtName_EditValueChanged" PreviewMouseLeftButtonDown="DtStart_PreviewMouseLeftButtonDown"/>
                    </Grid>

                </Grid>
                <Grid Grid.Column="1" Style="{DynamicResource ScreenSeparator}"></Grid>
                <Grid Grid.Column="2" Margin="7,0,7,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="9"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>


                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource OrangeBorder}">
                        <TextBlock Style="{DynamicResource OrangeBorderInfo}" Text="Discount Type &amp; Rate"></TextBlock>
                    </Border>

                    <TextBlock Grid.Row="2" Text="Discount Type"/>

                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="3"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="9"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton  Grid.Row="0" Content="% Off" x:Name="rbP" GroupName="1" Checked="RbP_Checked"/>
                        <dxe:TextEdit Grid.Row="0" Grid.Column="2" x:Name="numPerc" Mask="N2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  Text="0" EditValueChanged="TxtName_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>
                        <RadioButton Grid.Row="2" Content="Amount Off" x:Name="rbA" GroupName="1" Checked="RbP_Checked"/>
                        <dxe:TextEdit Grid.Row="2" Grid.Column="2" x:Name="numAbsolute" Mask="N2" MaskType="Numeric" MaskUseAsDisplayFormat="True"  Text="0" EditValueChanged="TxtName_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>
                    </Grid>

                    <TextBlock Grid.Row="6" Text="Applicable On"/>

                    <Grid Grid.Row="8"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="15"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <dxe:ToggleSwitch Grid.Column="0"  x:Name="chkItem" ContentPlacement="Far" CheckedStateContent="Items" UncheckedStateContent="Items" HorizontalAlignment="Left" IsChecked="True"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>
                        <dxe:ToggleSwitch Grid.Column="2"  x:Name="chkTicket" ContentPlacement="Far" CheckedStateContent="Tickets" UncheckedStateContent="Tickets" HorizontalAlignment="Left"  Checked="ChkActive_Checked" Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>
                    </Grid>

                    <Border Grid.Row="10" Grid.ColumnSpan="3" Style="{DynamicResource GreenBorder}" Margin="0,15,0,9">
                        <TextBlock Style="{DynamicResource GreenBorderInfo}" Text="Applicable on Day of Week"></TextBlock>
                    </Border>

                    <dxe:ToggleSwitch Grid.Row="12"  x:Name="chkAllAvailableDays" ContentPlacement="Far" CheckedStateContent="All Days of Week" UncheckedStateContent="All Days of Week" HorizontalAlignment="Left" Checked="ChkAllAvailableDays_Checked" Unchecked="ChkAllAvailableDays_Checked"></dxe:ToggleSwitch>


                    <Grid Grid.Row="14"  >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="3"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="3"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="9"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="9"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <dxe:ToggleSwitch Grid.Row="0" Grid.Column="0" x:Name="chkMon" ContentPlacement="Far" CheckedStateContent="Mon" UncheckedStateContent="Mon" HorizontalAlignment="Left" IsChecked="True" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>
                        <dxe:ToggleSwitch Grid.Row="0" Grid.Column="2" x:Name="chkTues" ContentPlacement="Far" CheckedStateContent="Tue" UncheckedStateContent="Tue" HorizontalAlignment="Left" IsChecked="True" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>
                        <dxe:ToggleSwitch Grid.Row="0" Grid.Column="4" x:Name="chkWed" ContentPlacement="Far" CheckedStateContent="Wed" UncheckedStateContent="Wed" HorizontalAlignment="Left" IsChecked="True" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>

                        <dxe:ToggleSwitch Grid.Row="2" Grid.Column="0" x:Name="chkThur" ContentPlacement="Far" CheckedStateContent="Thu" UncheckedStateContent="Thu" HorizontalAlignment="Left" IsChecked="True" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>
                        <dxe:ToggleSwitch Grid.Row="2" Grid.Column="2" x:Name="chkFri" ContentPlacement="Far" CheckedStateContent="Fri" UncheckedStateContent="Fri" HorizontalAlignment="Left" IsChecked="True" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>
                        <dxe:ToggleSwitch Grid.Row="2" Grid.Column="4" x:Name="chkSat" ContentPlacement="Far" CheckedStateContent="Sat" UncheckedStateContent="Sat" HorizontalAlignment="Left" IsChecked="True" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>

                        <dxe:ToggleSwitch Grid.Row="4" Grid.Column="0" x:Name="chkSun" ContentPlacement="Far" CheckedStateContent="Sun" UncheckedStateContent="Sun" HorizontalAlignment="Left" IsChecked="True" Checked="ChkActive_Checked"  Unchecked="ChkActive_Checked"></dxe:ToggleSwitch>




                    </Grid>

                    <Border Grid.Row="16" Grid.ColumnSpan="3" Style="{DynamicResource BlueBorder}" Margin="0,9,0,9">
                        <TextBlock Style="{DynamicResource BlueBorderInfo}" Text="Applicable on Month"></TextBlock>
                    </Border>

                    <dxe:ToggleSwitch Grid.Row="18"  x:Name="chkAllDate" ContentPlacement="Far" CheckedStateContent="Everyday in Month" UncheckedStateContent="Everyday in Month" HorizontalAlignment="Left" Checked="ChkAllDate_Checked" Unchecked="ChkAllDate_Checked"></dxe:ToggleSwitch>

                    <Border Grid.Row="20" BorderThickness="1" Style="{DynamicResource GroupBorder}">
                        <dxg:GridControl ShowBorder="False" x:Name="grdDate" SelectionMode="Cell" Height="170" >
                            <dxg:GridControl.View>
                                <dxg:TableView x:Name="gridView1" NavigationStyle="Cell" ShowColumnHeaders="False" ShowFilterPanelMode="Never" AllowColumnFiltering="False" />
                            </dxg:GridControl.View>
                            <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="Value1" Header="MON" Width="*" x:Name="col1" IsSmart="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"></dxe:TextEditSettings>
                                </dxg:GridColumn.EditSettings>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="dxg:LightweightCellEditor">
                                        <Style.Triggers>
                                            <Trigger Property="SelectionState" Value="Selected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                            <Trigger Property="SelectionState" Value="FocusedAndSelected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="Value2" Header="TUE" Width="*" x:Name="col2" IsSmart="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"></dxe:TextEditSettings>
                                </dxg:GridColumn.EditSettings>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="dxg:LightweightCellEditor">
                                        <Style.Triggers>
                                            <Trigger Property="SelectionState" Value="Selected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                            <Trigger Property="SelectionState" Value="FocusedAndSelected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="Value3" Header="WED" Width="*" x:Name="col3" IsSmart="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"></dxe:TextEditSettings>
                                </dxg:GridColumn.EditSettings>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="dxg:LightweightCellEditor">
                                        <Style.Triggers>
                                            <Trigger Property="SelectionState" Value="Selected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                            <Trigger Property="SelectionState" Value="FocusedAndSelected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="Value4" Header="THU" Width="*" x:Name="col4" IsSmart="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"></dxe:TextEditSettings>
                                </dxg:GridColumn.EditSettings>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="dxg:LightweightCellEditor">
                                        <Style.Triggers>
                                            <Trigger Property="SelectionState" Value="Selected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                            <Trigger Property="SelectionState" Value="FocusedAndSelected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="Value5" Header="FRI" Width="*" x:Name="col5" IsSmart="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"></dxe:TextEditSettings>
                                </dxg:GridColumn.EditSettings>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="dxg:LightweightCellEditor">
                                        <Style.Triggers>
                                            <Trigger Property="SelectionState" Value="Selected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                            <Trigger Property="SelectionState" Value="FocusedAndSelected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="Value6" Header="SAT" Width="*" x:Name="col6" IsSmart="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"></dxe:TextEditSettings>
                                </dxg:GridColumn.EditSettings>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="dxg:LightweightCellEditor">
                                        <Style.Triggers>
                                            <Trigger Property="SelectionState" Value="Selected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                            <Trigger Property="SelectionState" Value="FocusedAndSelected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                            </dxg:GridColumn>
                            <dxg:GridColumn FieldName="Value7" Header="SUN" Width="*" x:Name="col7" IsSmart="True">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings HorizontalContentAlignment="Center"></dxe:TextEditSettings>
                                </dxg:GridColumn.EditSettings>
                                <dxg:GridColumn.CellStyle>
                                    <Style TargetType="dxg:LightweightCellEditor">
                                        <Style.Triggers>
                                            <Trigger Property="SelectionState" Value="Selected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                            <Trigger Property="SelectionState" Value="FocusedAndSelected">
                                                <Setter Property="Background" Value="DodgerBlue"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridColumn.CellStyle>
                            </dxg:GridColumn>
                        </dxg:GridControl>

                    </Border>


                </Grid>
                <Grid Grid.Column="3" Style="{DynamicResource ScreenSeparator}"></Grid>
                <Grid Grid.Column="4" Margin="7,0,7,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="9"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="3"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>



                    </Grid.RowDefinitions>


                    <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource PurpleBorder}">
                        <TextBlock Style="{DynamicResource PurpleBorderInfo}" Text="Discount on Time"></TextBlock>
                    </Border>

                    <dxe:ToggleSwitch Grid.Row="2"  x:Name="chkAllDay" ContentPlacement="Far" CheckedStateContent="Anytime" UncheckedStateContent="Anytime" HorizontalAlignment="Left" Checked="ChkAllDay_Checked" Unchecked="ChkAllDay_Checked"></dxe:ToggleSwitch>


                    <Grid Grid.Row="4" x:Name="pnlAnyTime">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="6"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="32*"/>
                                <ColumnDefinition Width="45*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"  x:Name="btnAddTime" Width="90" Height="35"
                                                        Style="{DynamicResource AddButton}" Click="BtnAddTime_Click"/>
                            <Button Grid.Column="3"  x:Name="btnDeleteTime" Width="90" Height="35"
                                                        Style="{DynamicResource DeleteButton}" Click="BtnDeleteTime_Click"/>
                        </Grid>
                        <Border Grid.Row="4" BorderThickness="1" Style="{DynamicResource GroupBorder}">
                            <dxg:GridControl Grid.Row="4" ShowBorder="False" AutoGenerateColumns="AddNew"  x:Name="grdTime" Height="100">
                                <dxg:GridControl.View>
                                    <dxg:TableView x:Name="gridView2" NavigationStyle="Row" ShowFilterPanelMode="Never" AllowColumnFiltering="False"/>
                                </dxg:GridControl.View>
                                <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                    <dxg:GridColumn.EditSettings>
                                        <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                    </dxg:GridColumn.EditSettings>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="ID" Header="ID" Width="*" x:Name="colID" Visible="False"/>
                                <dxg:GridColumn FieldName="StartTime" Header="Start Time" Width="*" x:Name="colDay"/>
                                <dxg:GridColumn FieldName="EndTime" Header="End Time" Width="*" x:Name="gridColumn7"/>
                            </dxg:GridControl>
                        </Border>
                    </Grid>

                    <Border Grid.Row="6" Grid.ColumnSpan="3" Style="{DynamicResource OrangeBorder}" Margin="0,9,0,0" >
                        <TextBlock Style="{DynamicResource OrangeBorderInfo}" Text="Restricted Discount"></TextBlock>
                    </Border>

                    <dxe:ToggleSwitch Grid.Row="8"  x:Name="chkRestricted" ContentPlacement="Far" CheckedStateContent="Restrict to Certain Items" UncheckedStateContent="Restrict to Certain Items" HorizontalAlignment="Left" Checked="ChkRestricted_Checked" Unchecked="ChkRestricted_Checked"></dxe:ToggleSwitch>


                    <Grid Grid.Row="10" x:Name="pnlRestricted">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="3"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Item Categories" Style="{DynamicResource TBlkTitle}" HorizontalAlignment="Right" Margin="0,0,10,0" />
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="32*"/>
                                        <ColumnDefinition Width="45*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"  x:Name="btnAddCategory" Width="90" Height="35"
                                                        Style="{DynamicResource AddButton}" Click="BtnAddCategory_Click" />
                                    <Button Grid.Column="2"  x:Name="btnDeleteCategory" Width="90" Height="35"
                                                        Style="{DynamicResource DeleteButton}" Click="BtnDeleteCategory_Click"/>
                                </Grid>
                                <Border Grid.Row="4" BorderThickness="1" Style="{DynamicResource GroupBorder}">
                                    <dxg:GridControl Grid.Row="4" ShowBorder="False" x:Name="grdG" Height="100">
                                        <dxg:GridControl.View>
                                            <dxg:TableView x:Name="gridView3" NavigationStyle="Row" ShowFilterPanelMode="Never" AllowColumnFiltering="False"/>
                                        </dxg:GridControl.View>
                                        <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                            <dxg:GridColumn.EditSettings>
                                                <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                            </dxg:GridColumn.EditSettings>
                                        </dxg:GridColumn>
                                        <dxg:GridColumn FieldName="ID" Header="ID" Width="*" x:Name="gridColumn3" Visible="False"/>
                                        <dxg:GridColumn FieldName="Item" Header="Description" Width="*" x:Name="gridColumn4"/>
                                    </dxg:GridControl>
                                </Border>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
