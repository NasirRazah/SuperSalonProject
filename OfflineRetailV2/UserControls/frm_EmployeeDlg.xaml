<Window x:Class="OfflineRetailV2.UserControls.frm_EmployeeDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfflineRetailV2.UserControls"
             xmlns:cc="clr-namespace:OfflineRetailV2.Controls"
        xmlns:lm="clr-namespace:OfflineRetailV2.LayoutManager"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduling" 
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen"
        Title="" Foreground="White"   
        Width="1024" Height="740" Loaded="Window_Loaded" Closing="Window_Closing">
    <cc:ModalWindow  x:Name="ModalWindow">
        <Grid Margin="9">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Title"  x:Name="Title" VerticalAlignment="Center" Style="{DynamicResource BlueHeading}" />
                <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="9"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="CANCEL" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource CancelButtonStyle}" x:Name="btnCancel" Click="BtnCancel_Click" />
                    <Button Grid.Column="2" Content="SAVE" Height="35" Width="120" FontFamily="{StaticResource OSSemiBold}" 
                        Style="{DynamicResource SaveButtonStyle}" x:Name="btnLogin" Click="BtnLogin_Click"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="0,9,0,0">
                <UniformGrid Columns="4" >
                    <FrameworkElement x:Name="c1"/>
                </UniformGrid>
                <TabControl Style="{DynamicResource OuterPOSTabControlStyle}" x:Name="tcEmployee" Grid.Row="2" PreviewMouseLeftButtonUp="TcEmployee_PreviewMouseLeftButtonUp">
                    <TabItem  Width="{Binding ElementName=c1, Path=ActualWidth}" x:Name="tpGeneral"
                         Style="{DynamicResource OuterPOSTabItemStyle}" PreviewMouseLeftButtonUp="TpGeneral_PreviewMouseLeftButtonUp">
                        <TabItem.Header>
                            <TextBlock Text="General Details" Style="{DynamicResource TabItemText}"></TextBlock>
                        </TabItem.Header>

                        <Grid Margin="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="2"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="2"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="7,0,7,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                </Grid.RowDefinitions>


                                <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource GreenBorder}">
                                    <TextBlock Style="{DynamicResource GreenBorderInfo}" Text="Main Info."></TextBlock>
                                </Border>

                                <TextBlock Grid.Row="2" Text="Employee ID"/>
                                <dxe:TextEdit Grid.Row="4" Grid.Column="2" TabIndex="0" x:Name="txtEmpID" MaxLength="12" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="6" Text="First Name"/>
                                <dxe:TextEdit Grid.Row="8" Grid.Column="2" TabIndex="1" x:Name="txtFName" MaxLength="20" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="10" Text="Last Name"/>
                                <dxe:TextEdit Grid.Row="12" Grid.Column="2" TabIndex="2" x:Name="txtLName" MaxLength="20"  Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>


                                <Border Grid.Row="14" Grid.ColumnSpan="3" Style="{DynamicResource PurpleBorder}" Margin="0,9,0,9">
                                    <TextBlock Style="{DynamicResource PurpleBorderInfo}" Text="Security Profile &amp; Login Details"></TextBlock>
                                </Border>


                                <TextBlock Grid.Row="16" Text="Social Security #"/>
                                <dxe:TextEdit Grid.Row="18" Grid.Column="2" TabIndex="13" x:Name="txtSSN" MaxLength="11" Height="25" Mask="\d\d\d-\d\d-\d\d\d\d" MaskType="Regular" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>
                                <TextBlock Grid.Row="20" Text="Security Profile"/>
                                <dxg:LookUpEdit Grid.Row="22" Grid.Column="2" TabIndex="14" x:Name="cmbSecurity" Height="25" ItemsSource="{Binding}"
                                        DisplayMember="GroupName"
                                        ValueMember="ID"
                                        AutoPopulateColumns="False"
                                        AutoComplete="True"
                                        IncrementalFiltering="True"
                                        ImmediatePopup="True"
                                        IsPopupAutoWidth="False"
                                        EditValueChanged="TxtEmpID_EditValueChanged"
                                                PreviewMouseLeftButtonDown="CmbSecurity_PreviewMouseLeftButtonDown"
                                                PopupOpened="gen_PopupOpened">
                                    <dxg:LookUpEdit.PopupContentTemplate>
                                        <ControlTemplate>
                                            <dxg:GridControl Name="PART_GridControl" AutoGenerateColumns="None">
                                                <dxg:GridControl.Columns>
                                                    <dxg:GridColumn FieldName="ID" Visible="False" />
                                                    <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                                        <dxg:GridColumn.EditSettings>
                                                            <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                                        </dxg:GridColumn.EditSettings>
                                                    </dxg:GridColumn>
                                                    <dxg:GridColumn FieldName="GroupName" Header="Security Profile" VisibleIndex="0" />
                                                </dxg:GridControl.Columns>
                                                <dxg:GridControl.View>
                                                    <dxg:TableView AutoWidth="True" />
                                                </dxg:GridControl.View>
                                            </dxg:GridControl>
                                        </ControlTemplate>
                                    </dxg:LookUpEdit.PopupContentTemplate>
                                </dxg:LookUpEdit>
                                <TextBlock Grid.Row="24" Text="Passcode"/>
                                <dxe:PasswordBoxEdit  TabIndex="15" Height="25" Grid.Row="26" Grid.Column="2" x:Name="numPassword" MaxLength="4" EditValueChanged="TxtEmpID_EditValueChanged" PreviewTextInput="NumPassword_PreviewTextInput" GotFocus="NumP_GotFocus" LostFocus="Num_LostFocus" />
                                <TextBlock Grid.Row="28" Text="Confirm Passcode"/>
                                <dxe:PasswordBoxEdit  TabIndex="16" Height="25" Grid.Row="30" Grid.Column="2" x:Name="numCPassword" MaxLength="4" EditValueChanged="TxtEmpID_EditValueChanged" PreviewTextInput="NumCPassword_PreviewTextInput" GotFocus="NumP_GotFocus" LostFocus="Num_LostFocus"/>
                                <TextBlock Grid.Row="8" Text="Admin Password" x:Name="lbpswd1" Visibility="Collapsed"/>
                                <dxe:PasswordBoxEdit  Height="25" TabIndex="17" Grid.Row="8" Grid.Column="2" x:Name="txtadminpswd" Visibility="Collapsed" EditValueChanged="TxtEmpID_EditValueChanged"/>
                                <TextBlock Grid.Row="10" Text="Confirm Password" x:Name="lbpswd2" Visibility="Collapsed"/>
                                <dxe:PasswordBoxEdit  Height="25" TabIndex="18" Grid.Row="10" Grid.Column="2" x:Name="txtcadminpswd" Visibility="Collapsed" EditValueChanged="TxtEmpID_EditValueChanged"/>
                                <CheckBox Grid.Row="12" Grid.ColumnSpan="3" Content="  Locked" Foreground="Red"
                                                  x:Name="chkLocked" Visibility="Collapsed" TabIndex="19"/>

                                <dxe:ToggleSwitch Grid.Row="32"  x:Name="chkForcedPasscode" ContentPlacement="Far" CheckedStateContent="Forced Passcode for Point of Sale" UncheckedStateContent="Forced Passcode for Point of Sale" HorizontalAlignment="Left" IsChecked="True" Checked="chkForcedPasscode_Checked" ></dxe:ToggleSwitch>


                            </Grid>
                            <Grid Grid.Column="1" Style="{DynamicResource ScreenSeparator}"></Grid>
                            <Grid Grid.Column="2" Margin="7,0,7,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="21"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>


                                </Grid.RowDefinitions>


                                <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource OrangeBorder}">
                                    <TextBlock Style="{DynamicResource OrangeBorderInfo}" Text="Address"></TextBlock>
                                </Border>


                                <TextBlock Grid.Row="2" Text="Address 1"/>
                                <dxe:TextEdit Grid.Row="4" Grid.Column="2" TabIndex="3" x:Name="txtBadd1" MaxLength="250" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="6" Text="Address 2"/>
                                <dxe:TextEdit Grid.Row="8" Grid.Column="2" TabIndex="4" x:Name="txtBadd2" MaxLength="30" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="10" Text="City"/>
                                <dxe:TextEdit Grid.Row="12" Grid.Column="2" TabIndex="5" x:Name="txtBcity" MaxLength="20" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="14" Text="Zip" x:Name="lnkZip" TextDecorations="Underline" Cursor="Hand" MouseLeftButtonUp="LnkZip_MouseLeftButtonUp"  />
                                <dxe:TextEdit Grid.Row="16" Grid.Column="0" TabIndex="6" x:Name="cmbBzip" MaxLength="12" Height="25" LostFocus="CmbBzip_LostFocus" GotFocus="Full_GotFocus" />
                                <TextBlock Grid.Row="18" Text="State"/>
                                <dxe:TextEdit Grid.Row="20" Grid.Column="4" TabIndex="7" x:Name="txtBstate" MaxLength="30" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>


                                <Border Grid.Row="22" Grid.ColumnSpan="3" Style="{DynamicResource BlueBorder}">
                                    <TextBlock Style="{DynamicResource BlueBorderInfo}" Text="Phone &amp; Email"></TextBlock>
                                </Border>
                                
                                <TextBlock Grid.Row="24" Text="Phone 1"/>
                                <dxe:TextEdit Grid.Row="26" Grid.Column="2" TabIndex="8" MaxLength="14" x:Name="txtPhone1" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="28" Text="Phone 2"/>
                                <dxe:TextEdit Grid.Row="30" Grid.Column="2" TabIndex="9" MaxLength="14" x:Name="txtPhone2" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="32" Text="Email" />
                                <dxe:TextEdit Grid.Row="34" Grid.Column="2" TabIndex="10" MaxLength="60" x:Name="txtEmail" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>


                            </Grid>
                            <Grid Grid.Column="3" Style="{DynamicResource ScreenSeparator}"></Grid>
                            <Grid Grid.Column="4" Margin="7,0,7,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="9"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                </Grid.RowDefinitions>


                                <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{DynamicResource PurpleBorder}">
                                    <TextBlock Style="{DynamicResource PurpleBorderInfo}" Text="Photo"></TextBlock>
                                </Border>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Height="128" Width="140" Style="{DynamicResource GroupBorder}" BorderThickness="1" >
                                        <Image x:Name="pictPhoto" Stretch="Uniform"/>
                                    </Border>
                                    <Grid Grid.Column="2" Width="120" HorizontalAlignment="Right">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="9"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="9"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Button Grid.Row="0" Width="120" 
                                            Style="{DynamicResource DeletePhotoButton}" x:Name="btnClearImage" Click="BtnClearImage_Click" >

                                        </Button>
                                        <Button Grid.Row="2" Width="120"  
                                Style="{DynamicResource ScanPhotoButton}" x:Name="btnScanImage">

                                        </Button>
                                        <Button Grid.Row="4" Width="120" MinHeight="30" 
                                Style="{DynamicResource SelectPhotoButton}" x:Name="btnSelectPhoto" Click="Button1_Click" >

                                        </Button>
                                    </Grid>
                                </Grid>


                                <Border Grid.Row="4" Grid.ColumnSpan="3" Style="{DynamicResource GreenBorder}" Margin="0,9">
                                    <TextBlock Style="{DynamicResource GreenBorderInfo}" Text="Shifts &amp; Wages"></TextBlock>
                                </Border>


                                <TextBlock Grid.Row="6" Text="Shift"/>
                                <dxg:LookUpEdit TabIndex="20" Grid.Row="8" Grid.Column="2" x:Name="cmbShift" Height="25"  ItemsSource="{Binding}"
                                        ValueMember="ID"
                                        DisplayMember="ShiftName"
                                        AutoPopulateColumns="False"
                                        AutoComplete="True"
                                        IncrementalFiltering="True"
                                        ImmediatePopup="True"
                                        IsPopupAutoWidth="False"
                                                        EditValueChanged="TxtEmpID_EditValueChanged" 
                                                PreviewMouseLeftButtonDown="CmbShift_PreviewMouseLeftButtonDown" 
                                                PopupOpened="gen_PopupOpened"
                                        >
                                    <dxg:LookUpEdit.PopupContentTemplate>
                                        <ControlTemplate>
                                            <dxg:GridControl Name="PART_GridControl" AutoGenerateColumns="None">
                                                <dxg:GridControl.Columns>
                                                    <dxg:GridColumn FieldName="ID" Visible="False" />
                                                    <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                                        <dxg:GridColumn.EditSettings>
                                                            <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                                        </dxg:GridColumn.EditSettings>
                                                    </dxg:GridColumn>
                                                    <dxg:GridColumn FieldName="ShiftName" Header="Shift" VisibleIndex="1" />
                                                    <dxg:GridColumn FieldName="StartTime" Header="Start" VisibleIndex="2" />
                                                    <dxg:GridColumn FieldName="EndTime" Header="Start" VisibleIndex="3" />
                                                </dxg:GridControl.Columns>
                                                <dxg:GridControl.View>
                                                    <dxg:TableView AutoWidth="True" />
                                                </dxg:GridControl.View>
                                            </dxg:GridControl>
                                        </ControlTemplate>
                                    </dxg:LookUpEdit.PopupContentTemplate>
                                </dxg:LookUpEdit>

                                <TextBlock Grid.Row="10" Text="Rate"/>
                                <dxe:TextEdit Grid.Row="12" Grid.Column="2" TabIndex="21" x:Name="numRate" Height="25"  Mask="f2" MaskType="Numeric" MaskUseAsDisplayFormat="True" HorizontalContentAlignment="Right" Text="0" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Num_GotFocus" LostFocus="Num_LostFocus"/>



                                <Border Grid.Row="14" Grid.ColumnSpan="3" Style="{DynamicResource OrangeBorder}" Margin="0,9,0,9">
                                    <TextBlock Style="{DynamicResource OrangeBorderInfo}" Text="Emergency Contact Information"></TextBlock>
                                </Border>

                                <TextBlock Grid.Row="16" Text="Emergency Phone"/>
                                <dxe:TextEdit Grid.Row="18" Grid.Column="2" TabIndex="11" MaxLength="14" x:Name="txtEmgPhone" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>
                                <TextBlock Grid.Row="20" Text="Emergency Contact"/>
                                <dxe:TextEdit Grid.Row="22" Grid.Column="2" TabIndex="12" MaxLength="30" x:Name="txtEmgContact" Height="25" EditValueChanged="TxtEmpID_EditValueChanged" GotFocus="Full_GotFocus" LostFocus="Full_LostFocus"/>


                            </Grid>
                        </Grid>

                    </TabItem>
                    <TabItem  Width="{Binding ElementName=c1, Path=ActualWidth}" x:Name="tpService"
                         Style="{DynamicResource OuterPOSTabItemStyle}" PreviewMouseLeftButtonUp="TpService_PreviewMouseLeftButtonUp">
                        <TabItem.Header>
                            <TextBlock Text="Services" Style="{DynamicResource TabItemText}"></TextBlock>
                        </TabItem.Header>
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="11"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Left" CheckedStateContent="Can Provide Service" UncheckedStateContent="Can Provide Service" x:Name="chkAppointment" Checked="ChkAppointment_Checked" Unchecked="ChkAppointment_Checked"/>
                            <dxe:ToggleSwitch ContentPlacement="Far" HorizontalAlignment="Right" CheckedStateContent="Check / Uncheck All" UncheckedStateContent="Check / Uncheck All" x:Name="chkAll" Checked="ChkAll_Checked" Unchecked="ChkAll_Checked"/>
                            <dxg:GridControl Grid.Row="2" ShowBorder="False"  x:Name="grdService">
                                <dxg:GridControl.View>
                                    <dxg:TableView x:Name="gridView7" NavigationStyle="Cell" CellValueChanging="GridView7_CellValueChanging"/>
                                </dxg:GridControl.View>
                                <dxg:GridColumn IsSmart="False" FieldName="ID" Header="ID" Width="*" x:Name="colsrvID" Visible="False"/>
                                <dxg:GridColumn FieldName="Image" Visible="False" VisibleIndex="-1" Width="*" AllowAutoFilter="False" Focusable="False">
                                    <dxg:GridColumn.EditSettings>
                                        <dxe:ImageEditSettings Stretch="UniformToFill"/>
                                    </dxg:GridColumn.EditSettings>
                                </dxg:GridColumn>
                                <dxg:GridColumn IsSmart="False" FieldName="SKU" Header="Code" Width="*" x:Name="colsrvcode" AllowFocus="False" AllowEditing="False"/>
                                <dxg:GridColumn IsSmart="False" FieldName="Description" Header="Service" Width="*" x:Name="colsrvDesc" AllowFocus="False" AllowEditing="False"/>
                                <dxg:GridColumn IsSmart="False" FieldName="ServiceCheck" Header=" " Width="*" x:Name="colCheck" AllowFocus="True" AllowEditing="True">
                                    <dxg:GridColumn.EditSettings>
                                        <dxe:CheckEditSettings/>
                                    </dxg:GridColumn.EditSettings>
                                </dxg:GridColumn>
                            </dxg:GridControl>
                        </Grid>
                    </TabItem>
                    <TabItem  Width="{Binding ElementName=c1, Path=ActualWidth}"
                         Style="{DynamicResource OuterPOSTabItemStyle}" x:Name="tabpAttendance" PreviewMouseLeftButtonUp="TabpAttendance_PreviewMouseLeftButtonUp">
                        <TabItem.Header>
                            <TextBlock Text="Attendance Details" Style="{DynamicResource TabItemText}"></TextBlock>
                        </TabItem.Header>
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="11"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="0.2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="0.2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="0.6*"/>
                                </Grid.ColumnDefinitions>
                                <dxe:ComboBoxEdit x:Name="dtFilter" BorderTemplate="{DynamicResource CustomBorderTemplate}" ItemsSource="{Binding}" DisplayMember="DisplayText" ValueMember="FilterText" IsTextEditable="False" EditValueChanged="DtFilter_EditValueChanged" PreviewMouseLeftButtonDown="DtFilter_PreviewMouseLeftButtonDown" >

                                </dxe:ComboBoxEdit>
                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="9"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="9"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="From" x:Name="lbFrom" FontSize="12"/>
                                    <dxe:DateEdit Grid.Column="2"  BorderTemplate="{DynamicResource CustomBorderTemplate}" x:Name="dtFrom" EditValueChanged="DtFrom_EditValueChanged" PreviewMouseLeftButtonDown="DtFrom_PreviewMouseLeftButtonDown"/>
                                    <TextBlock Grid.Column="4" Text="To" x:Name="lbTo" FontSize="12"/>
                                    <dxe:DateEdit Grid.Column="6" BorderTemplate="{DynamicResource CustomBorderTemplate}" x:Name="dtTo" EditValueChanged="DtFrom_EditValueChanged" PreviewMouseLeftButtonDown="DtFrom_PreviewMouseLeftButtonDown"/>
                                </Grid>
                                <Grid Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="9"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" x:Name="btnAttnAdd" Height="35" Width="90"
                                            Style="{DynamicResource AddButton}" Click="BtnAttnAdd_Click"/>
                                    <Button Content="Edit" Grid.Column="2"  x:Name="btnAttnEdit"  Height="35" Width="90"
