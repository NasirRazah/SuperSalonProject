<UserControl x:Class="OfflineRetailV2.ReceiptTemplateControls.rt_OrderHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfflineRetailV2.ReceiptTemplateControls"
             mc:Ignorable="d" 
             Width="350" HorizontalAlignment="Center" Padding="2,2,15,2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtData1" Grid.Column="0" Text="ABC" FontSize="20" HorizontalAlignment="Left"   ></TextBlock>
        <TextBlock x:Name="txtData2" Grid.Column="1" Text="ABC" FontSize="20"  HorizontalAlignment="Center" ></TextBlock>
        <TextBlock x:Name="txtData3" Grid.Column="2" Text="ABC" FontSize="20"  HorizontalAlignment="Right" ></TextBlock>
    </Grid>
</UserControl>
